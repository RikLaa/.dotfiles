#!/bin/bash


# get default editor
if [ -x "$(command -v nvim)" ]; then
    VIM_EDITOR='nvim'
else
    if [ -x "$(command -v vim)" ]; then
        VIM_EDITOR='vim'
    else
        VIM_EDITOR='vi'
    fi
fi

export EDITOR=$VIM_EDITOR 

export ANDROID_HOME="$HOME/Library/Android/sdk/"

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# For diffing
export REVIEW_BASE=master

# Cannot use kitty inside tmux if this not set
# export TERM=screen-256color

# for gruvbox 256 colour theme. Doesnt work it osx regular terminal but it break (unlike with truecolor)
. $HOME/.dotfiles/vim/bundle/gruvbox/gruvbox_256palette_osx.sh

export PATH="/usr/local/sbin:/usr/local/bin:$HOME/bin:$HOME/.local/bin:$PATH:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools"

# For 'local' (use base) python packages
export PYTHONUSERBASE=$HOME/.local
